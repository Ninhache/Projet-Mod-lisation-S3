<ruleset xmlns="http://pmd.sourceforge.net/ruleset/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Règles Projet Modélisation" xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">
	<description> Ensemble de règles pour projet de Modélisation </description>
	<rule ref="category/java/design.xml/NcssCount">
		<properties>
			<property name="methodReportLevel" value="60" />
			<property name="classReportLevel" value="200" />
			<property name="ncssOptions" value="" />
		</properties>
	</rule>
	<rule ref="category/java/codestyle.xml/ClassNamingConventions"/>
	<rule ref="category/java/codestyle.xml/FieldNamingConventions"/>
	<rule ref="category/java/codestyle.xml/MethodNamingConventions"/>
	<rule ref="category/apex/bestpractices.xml/UnusedLocalVariable" />
	<rule ref="category/java/bestpractices.xml/UnusedImports" />
	<rule ref="category/java/bestpractices.xml/UnusedPrivateField" />
	<rule ref="category/java/bestpractices.xml/UnusedPrivateMethod" />
	<rule ref="category/java/codestyle.xml/UseDiamondOperator"/>
	<rule ref="category/java/errorprone.xml/AvoidLiteralsInIfCondition" />
	<rule ref="category/java/design.xml/AvoidDeeplyNestedIfStmts">
    <properties>
        <property name="problemDepth" value="3" />
    </properties>
	</rule>
	<rule ref="category/java/codestyle.xml/GenericsNaming" />
	<rule ref="category/java/codestyle.xml/TooManyStaticImports" />
	<rule ref="category/java/codestyle.xml/LongVariable" />
</ruleset>